<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<p id="author">
  <b>By:</b>
  <%= @post.author.email%>
</p>
<p id="status">
  <b>Status:</b>
  <%= @post.published? ? "Published" : "Unpublished"%>
</p>

<% policy_scope(@post.comments).each do |comment| %>
  <%= comment.author_email %>
  <%= comment.content %>

<% end %>
<hr>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
